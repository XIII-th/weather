<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.xiiilab.weather">

    <application
            android:name=".WeatherApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:theme="@style/AppTheme">
        <activity
                android:name=".WeatherActivity"
                android:label="@string/title_activity_weather"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".CityListActivity"
                android:label="@string/title_activity_city_list"
                android:parentActivityName=".WeatherActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.xiiilab.weather.WeatherActivity"/>
        </activity>
        <activity
                android:name=".EditActivity"
                android:label="@string/title_activity_edit"
                android:parentActivityName=".CityListActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.xiiilab.weather.CityListActivity"/>
        </activity>
    </application>

</manifest>